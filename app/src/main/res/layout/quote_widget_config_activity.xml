<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <RelativeLayout
        android:id="@+id/category_config_container"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_margin="5dp"
        android:layout_weight="0.05">
        <TextView
            android:id="@+id/weekday_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_category_text"
            android:textColor="#000000"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/weekday_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/weekday_text"
            android:layout_toStartOf="@+id/category_spinner"
            android:text="@string/weekday_desc_text" />

        <Spinner
            android:id="@+id/category_spinner"
            android:layout_width="wrap_content"
            android:prompt="@string/choice_prompt"
            android:entries="@array/categories"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/weekday_desc"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>


    <RelativeLayout
        android:orientation="horizontal"
        android:id="@+id/random_or_not_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <TextView
            android:text="@string/random_or_qod_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/random_text"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:text="@string/random_or_qod_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/random_desc"
            android:layout_marginEnd="40dp"
            android:layout_below="@+id/random_text"
            android:layout_toStartOf="@+id/random_or_qod_checkbox" />

        <CheckBox
            android:id="@+id/random_or_qod_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:layout_marginEnd="38dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <Button
        android:text="@string/save_config_button_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/add_widget_button" />

</LinearLayout>